<?xml version="1.0" encoding="utf-8" ?>

<Defs>

 	 <ThingDef Class="Zeus.ThingDef_ZeusShock" ParentName="BaseBullet">
  	  <defName>Bullet_ZeusShock</defName>
  	  <label>Zeus Barb</label>
   	 <graphicData>
   	   <texPath>Things/Projectile/Bullet_Small</texPath>
   	   <graphicClass>Graphic_Single</graphicClass>
   	 </graphicData>
   	 <projectile>
  	   <damageDef>Bullet</damageDef>
   	   <damageAmountBase>1</damageAmountBase>
   	   <speed>65</speed>
  	  </projectile>
	   <AddHediffChance>0.9</AddHediffChance>
	   <HediffToAdd>TaserShock</HediffToAdd>
	   <thingClass>Zeus.Projectile_ZeusShock</thingClass>
	 </ThingDef>

	<ThingDef ParentName="BaseMakeableGun">
		<defName>Gun_ZeusTaser</defName>
		<label>Zeus Taser</label>
		<description>A short range taser, made to shock and take down human sized opponents.</description>
		<graphicData>
			<texPath>ThingDefs_Misc/ZeusTaser/Zeus</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <recipeMaker>
		<researchPrerequisite>WeaponryProtoZeus</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
    </recipeMaker>
	<weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
	<equippedStatOffsets>
      <MoveSpeed>0.15</MoveSpeed>
    </equippedStatOffsets>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>1.1</Mass>
			<AccuracyTouch>0.85</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>40</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_ZeusShock</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>6</range>
				<soundCast>ZeusShockCSGOSound</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	</ThingDef>
</Defs>