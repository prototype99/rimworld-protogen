 <RecipeDef ParentName="SurgeryXTails">
      <defName>InstallClothXTail</defName>
      <label>install cloth tail</label>
      <description>Installs cloth tail.</description>
      <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
      <jobString>Installing cloth tail.</jobString>
      <workAmount>1200</workAmount>
      <ingredients>
         <li>
            <filter>
               <categories>
                  <li>Medicine</li>
               </categories>
            </filter>
            <count>1</count>
         </li>
         <li>
            <filter>
               <thingDefs>
                  <li>Cloth</li>
               </thingDefs>
            </filter>
            <count>3</count>
         </li>
      </ingredients>
      <fixedIngredientFilter>
         <categories>
            <li>Medicine</li>
         </categories>
         <thingDefs>
            <li>Cloth</li>
         </thingDefs>
      </fixedIngredientFilter>
      <appliedOnFixedBodyParts>
         <li>Tail</li>
      </appliedOnFixedBodyParts>
      <addsHediff>ClothTail</addsHediff>
   </RecipeDef>
  
