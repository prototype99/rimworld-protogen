<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationAdd">
	    <xpath>*[self::Defs]</xpath>
	    <value>
  <ThoughtDef>
    <defName>MasochistPain</defName>
    <workerClass>ThoughtWorker_Pain</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <requiredTraits>
      <li>Masochist</li>
    </requiredTraits>
    <nullifyingTraits>      
	  <li>NoMither</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>masochist in minor pain</label>
        <description>Ow... Heh heh heh... I could get used to this!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
      <li>
        <label>masochist in serious pain</label>
        <description>Ughhh... It hurts, but I love it! Keep it coming!</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
      <li>
        <label>masochist in intense pain</label>
        <description>Ouch... I think something's broken... But what an exquisite feeling!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
      <li>
        <label>masochist in mind-shattering pain</label>
        <description>Ahhh... Am I in heaven?</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
   </value>
	</Operation>
</Patch>