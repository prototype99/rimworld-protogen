<?xml version="1.0" encoding="utf-8" ?>
<Defs>

   <HediffDef ParentName="DiseaseBase">
    <defName>TaserShock</defName>
    <label>taser shock</label>
    <description>Electrocution from a taser causes stunning.</description>
	<hediffClass>HediffWithComps</hediffClass>
	<defaultLabelColor>(0.2, 0.9, 0.9)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-5</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0.20</minSeverity>
        <label>recovering</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.6</offset>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.40</minSeverity>
        <label>stunned</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
	  <li>
        <minSeverity>0.90</minSeverity>
        <label>excessive</label>
        <lifeThreatening>true</lifeThreatening>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
</Defs>