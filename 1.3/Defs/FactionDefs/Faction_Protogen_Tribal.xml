    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Prime Minister</leaderTitle>
	<factionNameMaker>NamerFactionProtogen</factionNameMaker>
	<settlementNameMaker>NamerFactionProtogenBase</settlementNameMaker>
	<techLevel>Neolithic</techLevel>
	<backstoryCategories>
		<li>ProtogenBackstory</li>
		<li>Tribal</li>
		<li>Offworld</li>
		<li>Outlander</li>
